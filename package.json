{
  "name": "formation-generator",
  "version": "1.0.0",
  "description": "Générateur de pages de formation pour entreprises manufacturières",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run validate && npm run generate && vite build",
    "preview": "vite preview",
    "generate": "node build-tools/generate.js",
    "validate": "node build-tools/validate.js",
    "clean": "rimraf dist public/generated",
    "deploy": "npm run build && gh-pages -d dist",
    "test:formations": "npm run validate && npm run generate",
    "watch": "npm run generate && npm run dev",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html"
  },
  "dependencies": {
    "framer-motion": "^10.16.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.263.1",
    "marked": "^9.1.2",
    "prism-react-renderer": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.47.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "fs-extra": "^11.1.1",
    "gh-pages": "^6.0.0",
    "glob": "^10.3.4",
    "postcss": "^8.5.4",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.4.17",
    "vite": "^4.4.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/votre-username/formation-generator.git"
  },
  "keywords": [
    "formation",
    "training",
    "manufacturing",
    "education",
    "react",
    "markdown",
    "generator"
  ],
  "author": "Votre Nom",
  "license": "MIT",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  }
}
